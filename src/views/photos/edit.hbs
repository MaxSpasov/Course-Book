<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Course</h1>
            <form method="POST">
                <label>Title:</label>
                <input name="name" type="text" id="title" value="{{photo.name}}">

                <label>Type:</label>
                <input name="type" type="text" id="type" value="{{photo.type}}">

                <label>Certificate:</label>
                <input name="certificate" type="text" id="certificate" value="{{photo.certificate}}">

                <label>Image:</label>
                <input name="image" type="text" id="image" placeholder="http://..."
                    value="{{photo.image}}">

                <label>Description:</label>
                <textarea id="content"
                    name="description">{{photo.description}}</textarea>

                <label>Price:</label>
                <input name="price" type="number" id="price" value="{{photo.price}}">

                <input type="submit" id="btn" value="Edit">
            </form>
        </div>
    </section>
</main>