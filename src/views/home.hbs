<main>
    <div class="container">
        <div class="course-message">
            <h1 id="site-title">Course Book</h1>
            <h2 id="site-mid-title">Show your opportunities!</h2>
        </div>
        <div class="last-course">
            {{#each photos}}
            <div class="info">
                <h2 class="title">{{photo.name}}</h2>
                <h4 class="genre">Type: {{this.type}}</h4>
                <h4 class="certificate">Certificate: {{#if this.certificate}}Yes{{else}}No{{/if}}</h4>
                <h4 class="price">Price: â‚¬{{this.price}}</h4>
                <div class="learn-more">
                    <a href="#">Learn More...</a>
                </div>
            </div>
            {{/each}}
            {{#unless courses.length}}
            <article class="not-available-course">
                <h1>No courses available yet.</h1>
            </article>
            {{/unless}}
        </div>
    </div>
</main>